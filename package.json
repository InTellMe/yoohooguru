{
  "name": "yoohooguru",
  "version": "1.0.0",
  "description": "A comprehensive skill-sharing platform where users exchange skills, discover purpose, and create exponential community impact",
  "main": "index.js",
  "packageManager": "npm@10.2.4",
  "scripts": {
    "dev": "turbo run dev --filter=@yoohooguru/main --filter=yoohooguru-backend",
    "dev:main": "cd apps/main && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "turbo run build --filter=@yoohooguru/main --filter=yoohooguru-backend",
    "build:main": "cd apps/main && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:backend",
    "test:backend": "cd backend && npm test",
    "qa:test": "cd qa && npm test",
    "qa:install": "cd qa && npm install",
    "lint": "npm run lint:main && npm run lint:backend",
    "lint:main": "cd apps/main && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "install:all": "npm install && cd apps/main && npm install && cd ../../backend && npm install && cd ../qa && npm install",
    "start": "cd backend && npm start",
    "railway:build": "cd backend && npm run build",
    "railway:start": "cd backend && npm start",
    "railway:validate": "./scripts/validate-railway.sh",
    "firebase:validate": "./scripts/validate-firebase-production.sh",
    "firebase:validate:win": "node scripts/validate-firebase-production.js",
    "deploy": "npm run build && npm run deploy:backend",
    "deploy:backend": "cd backend && npm run deploy",
    "deploy:main": "vercel --prod",
    "copilot:demo": "node scripts/copilot-agent.js --demo",
    "copilot:agent": "node scripts/copilot-agent.js",
    "test:copilot-agent": "node scripts/test-copilot-agent.js",
    "orphans": "node scripts/detect-orphan-modules.js --verbose --output=./orphan-reports",
    "orphans:ci": "scripts/ci-orphan-detection.sh",
    "seed:test-db": "node seed-test-db.js",
    "cleanup:test-db": "node scripts/cleanup-test-db.js",
    "migrate:content": "node backend/ai-content-migration.js",
    "test:auth": "cd backend && npm test -- tests/test.auth.spec.js"
  },
  "keywords": [
    "skill-sharing",
    "community",
    "education",
    "react-native",
    "nodejs",
    "firebase",
    "ai"
  ],
  "author": "GooseyPrime",
  "license": "MIT",
  "dependencies": {
    "@vercel/speed-insights": "^1.2.0",
    "next": "16.1.5",
    "winston": "^3.18.2"
  },
  "devDependencies": {
    "@types/node": "^24.9.2",
    "@types/react": "^19.2.2",
    "jest": "^30.2.0",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "workspaces": [
    "apps/main",
    "packages/*",
    "backend"
  ],
  "engines": {
    "node": ">=20.0.0 <23.0.0",
    "npm": ">=9.0.0"
  }
}
