# Test Environment Configuration
# This file is used by automated tests and CI/CD pipelines
NODE_ENV=test
PORT=3001

# JWT for Testing - Not Production Secure
JWT_SECRET=test_jwt_secret_for_ci_testing_only_not_production_secure
JWT_EXPIRES_IN=7d

# Session Secret for Testing - Not Production Secure
SESSION_SECRET=test_session_secret_for_ci_testing_only_not_production_secure

# Firebase Test Configuration
# Note: These are placeholder values. Real Firebase credentials should be provided via CI secrets
FIREBASE_PROJECT_ID=test-project
FIREBASE_API_KEY=test_firebase_api_key
FIREBASE_AUTH_DOMAIN=test.firebaseapp.com
FIREBASE_STORAGE_BUCKET=test.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef

# Service Account (CI will override these with real secrets)
FIREBASE_CLIENT_EMAIL=firebase-test@yoohoo-dev-testing.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nTEST_FAKE_KEY_FOR_TESTING_ONLY\n-----END PRIVATE KEY-----\n

# Disable Stripe in Tests (use mocks)
STRIPE_SECRET_KEY=test_secret_key
STRIPE_PUBLISHABLE_KEY=stripe_publishable_key_placeholder
STRIPE_WEBHOOK_SECRET=stripe_webhook_secret_placeholder
STRIPE_WEBHOOK_ID=stripe_webhook_id_placeholder
STRIPE_GURU_PASS_PRICE_ID=price_guru_pass_test
STRIPE_SKILL_VERIFICATION_PRICE_ID=price_skill_verification_test
STRIPE_TRUST_SAFETY_PRICE_ID=price_trust_safety_test

# App Configuration for Testing
APP_BRAND_NAME=yoohoo.guru
APP_DISPLAY_NAME=yoohoo.guru
APP_LEGAL_EMAIL=legal@yoohoo.guru
APP_PRIVACY_EMAIL=privacy@yoohoo.guru
APP_SUPPORT_EMAIL=support@yoohoo.guru

# CORS for Local Testing
CORS_ORIGIN_DEVELOPMENT=http://localhost:3000,http://127.0.0.1:3000,http://*.localhost:3000
CORS_ORIGIN_PRODUCTION=https://yoohoo.guru,https://www.yoohoo.guru,https://api.yoohoo.guru,https://*.yoohoo.guru,https://*.vercel.app

# Rate Limiting for Testing
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
